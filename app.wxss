.clearfix::before, .clearfix::after {
  content: ' ';
  display: block;
  clear: both;
  visibility: hidden;
  line-height: 0;
  height: 0;
}

.clearfix {
  zoom: 1;
}

.page-section {
  border-top: 1px solid #fff;
}

