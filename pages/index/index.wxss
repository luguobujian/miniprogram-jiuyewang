.swiper {
  width: 710rpx;
  height: 300rpx;
  margin: 4rpx auto 20rpx;
}

.swiper-item, .swiper-item image {
  width: 100%;
  height: 100%;
}

.tbmargin {
  background-color: #f5f5f5;
  border-bottom: 1rpx solid #fff;
}

.box {
  background-color: #fff;
  margin: 20rpx 0;
}

.box-one {
  border-bottom: 1rpx solid #eee;
}

.title-box {
  width: 107rpx;
  text-align: center;
  margin: 34rpx 0 30rpx;
  border-right: 1rpx solid #eee;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  font-style: italic;
  color: rgba(57, 148, 229, 1);
  line-height: 42rpx;
}

.simple-title {
  font-size: 22rpx;
  font-weight: 400;
  font-style: italic;
  color: rgba(153, 153, 153, 1);
  line-height: 22rpx;
}

.c-box {
  font-size: 28rpx;
  color: #333;
  line-height: 36rpx;
  margin: 30rpx 26rpx;
}

.c-box .c {
  width: 512rpx;
  line-height: 42rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.more-box {
  margin: 29rpx 0;
  width: 44rpx;
  height: 80rpx;
  text-align: center;
  line-height: 28rpx;
  background: rgba(245, 245, 245, 1);
  border-radius: 2rpx;
}

.more {
  font-size: 24rpx;
  color: #999;
  margin: 12rpx;
}

.top-tab {
  border-bottom: 1rpx solid #eee;
}

.tab-one {
  display: inline-block;
  color: #999;
  font-size: 28rpx;
  padding: 25rpx 20rpx 24rpx;
}

.tab-one.active {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
  position: relative;
}

.tab-one.active::before {
  content: '';
  width: 53rpx;
  height: 8rpx;
  background: rgba(83, 178, 245, 1);
  border-radius: 4rpx;
  position: absolute;
  left: 24rpx;
  bottom: 0;
}

.item-list-box {
}

.item-list {
  background: #f5f5f5;
  border-bottom: 1rpx solid #fff;
}

.lr-box {
  padding: 28rpx 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.item-list-left {
  width: 600rpx;
}

.item-list-left-t {
  color: #333;
  font-size: 32rpx;
  line-height: 34rpx;
}

.item-list-left-b {
  color: #999;
  font-size: 26rpx;
  line-height: 26rpx;
  margin-top: 18rpx;
}

.item-list-right {
  width: 84rpx;
  height: 84rpx;
}

.item-list-right image {
  width: 84rpx;
  height: 84rpx;
  border-radius: 4rpx;
  background: skyblue;
}


