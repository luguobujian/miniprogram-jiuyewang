/* pages/bind/bind.wxss */

.container {
  background: #fff;
  border-top: 1rpx solid #f5f5f5;
}

.row {
  width: 660rpx;
  height: 88rpx;
  margin: 0 auto;
  margin-top: 45rpx;
  background: #f2f2f2;
  position: relative;
  border-radius: 4rpx;
}

.row input {
  width: 634rpx;
  height: 88rpx;
  font-size: 28rpx;
  padding-left: 26rpx;
  background: #f2f2f2;
  border-radius: 4rpx;
}

button.codeBtn {
  position: absolute;
  right: 0;
  top: 0;
  color: #3994e5;
  background-color: #f2f2f2;
  width: 35%;
  font-size: 28rpx;
  font-weight: normal;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0;
}

button[disabled].codeBtn {
  color: #3994e5;
  background-color: #f2f2f2;
}

.subBtn {
  width: 200rpx;
  height: 80rpx;
  background: #fff;
  color: #000;
  border-radius: 50rpx;
  line-height: 80rpx;
}

button.save {
  width: 660rpx;
  height: 88rpx;
  line-height: 60rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: normal;
  background: rgba(57, 148, 229, 1);
  border-radius: 4rpx;
  margin-top: 50rpx;
}
