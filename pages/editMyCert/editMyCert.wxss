/* pages/editMyCert/editMyCert.wxss */

.container > view {
  margin-top: 20rpx;
}

.item-inp {
  font-size: 30rpx;
  background-color: #fff;
  padding: 0 25rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.item-inp > view {
  display: inline-block;
  line-height: 88rpx;
}

.item-inp-tit {
  width: 200rpx;
}

.item-inp-box {
  width: 500rpx;
}

.item-inp-box input {
  height: 28rpx;
  text-align: right;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 22rpx 0;
}

.go-ico image {
  width: 15rpx;
  height: 30rpx;
}

.go-ico {
  padding: 30rpx 0;
  padding-left: 8rpx;
}

.btn-box {
  width: 96%;
  display: flex;
  justify-content: center;
  position: fixed;
  left: 2%;
  bottom: 26rpx;
}

.btn-box button {
  display: inline-block;
  font-weight: normal;
  line-height: 88rpx;
  padding: 0;
}

.btn-box .save-btn {
  flex: 1;
  color: #fff;
  font-weight: normal;
  background: #3994e5;
}
