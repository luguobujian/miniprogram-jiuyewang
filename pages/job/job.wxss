/* pages/job/job.wxss */

page, .container {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}

.top-sort {
  display: flex;
  width: 100%;
  background-color: #fff;
  position: fixed;
}

.top-sort-classes {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  line-height: 80rpx;
  border-top: 1rpx solid #f5f5f5;
}

.list-box {
  padding-top: 80rpx;
  background-color: #f5f5f5;
}

.item-list {
  margin-top: 19rpx;
}

.lr-box {
  padding: 27rpx 20rpx 29rpx;
  background-color: #fff;
}

.item-list-left {
  width: 448rpx;
}

.item-list-right {
  width: 262rpx;
}

.title {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.simple-title {
  color: #999;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.simple-title:last-child {
  margin-bottom: 0rpx;
}

.date {
  color: #999;
  font-size: 26rpx;
  text-align: right;
  margin-top: 68rpx;
}
