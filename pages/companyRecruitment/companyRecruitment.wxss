/* pages/companyRecruitment/companyRecruitment.wxss */

page, .container {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}

.list-box {
  background-color: #f5f5f5;
}

.item-list {
  margin-top: 20rpx;
  background-color: #fff;
}

.avatar, .avatar-box {
  width: 80rpx;
  height: 80rpx;
  background-color: skyblue;
  border-radius: 50%;
}

.avatar-box {
  margin: 23rpx 16rpx 0 20rpx;
}

.info {
  width: 613rpx;
  padding-right: 20rpx;
}

.info-top {
  border-bottom: 1rpx solid #f5f5f5;
}

.info-top-top {
  line-height: 32rpx;
  padding-top: 27rpx;
  padding-bottom: 18rpx;
}

.welfare-box {
  margin-bottom: 19rpx;
}

.welfare-tag {
  display: inline-block;
  color: #3994e5;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  margin-right: 11rpx;
  background: rgba(57, 148, 229, 0.1);
  border-radius: 4rpx;
}

.info-bottom {
}

.info-bottom-t {
  font-size: 24rpx;
  line-height: 24rpx;
  padding-top: 20rpx;
  padding-bottom: 17rpx;
}

.info-bottom-b {
  color: #999;
  font-size: 24rpx;
  line-height: 24rpx;
  padding-bottom: 27rpx;
}
