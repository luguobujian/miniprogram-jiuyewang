/* pages/jobShow/jobShow.wxss */

.container {
  background-color: #f5f5f5;
}

.top-job, .top-company {
  padding: 27rpx 20rpx;
  border-top: 1rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
  background-color: #fff;
}

.simple-title {
  color: #999;
  font-size: 24rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.welfare-tag {
  color: #3994e5;
  font-size: 24rpx;
  width: 126rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  margin-right: 11rpx;
  background: rgba(57, 148, 229, 0.1);
  border-radius: 4rpx;
}

.top-company .simple-title {
  margin-bottom: 10rpx;
}

.right-box, .right-box image {
  width: 84rpx;
  height: 84rpx;
  background: rgba(245, 245, 245, 1);
  border: 1px solid rgba(238, 238, 238, 1);
  border-radius: 4rpx;
}

.job-content {
  padding: 0 20rpx;
  margin: 20rpx 0;
  background-color: #fff;
}

.job-content-title {
  padding: 32rpx 0 30rpx;
}

.job-con {
  font-size: 28rpx;
  padding-bottom: 40rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.addr-box {
  font-size: 28rpx;
  padding: 22rpx 0;
}

.addr-box image {
  width: 30rpx;
  height: 38rpx;
  vertical-align: sub;
  margin-right: 16rpx;
}

.liuyan {
  margin-bottom: 120rpx;
}

.ly-title-box {
  font-size: 28rpx;
  padding: 28rpx 20rpx 25rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f5f5f5;
}

.item-list {
  padding: 0 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f5f5f5;
}

.avatar-box {
  margin-top: 17rpx;
}

.avatar-box image {
  width: 54rpx;
  height: 54rpx;
  background-color: skyblue;
  border-radius: 50%;
}

.item-list-right {
  width: 635rpx;
  color: #999;
  font-size: 28rpx;
}

.ilrt {
  line-height: 28rpx;
  padding: 30rpx 0 20rpx;
}

.ilrb {
  width: 635rpx;
  height: 60rpx;
  margin-top: 20rpx;
  margin-bottom: 23rpx;
  background: rgba(245, 245, 245, 1);
}

.ilrb view {
  display: inline-block;
  line-height: 60rpx;
}

.ilrbl {
  color: #3994e5;
  margin-left: 20rpx;
}

.ilrbr {
  width: 470rpx;
}

.footer {
  width: 100%;
  height: 98rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  position: fixed;
  bottom: 0;
}

.share-box {
  width: 110rpx;
  color: #666;
  font-size: 24rpx;
  text-align: center;
  margin-top: 19rpx;
}

.share-box image {
  width: 35rpx;
  height: 35rpx;
}

.btn-box button {
  width: 620rpx;
  height: 70rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 52rpx;
  margin-top: 10rpx;
  background: rgba(57, 148, 229, 1);
  border-radius: 4rpx;
}
