.container > view {
  margin-top: 20rpx;
}

.item-inp {
  font-size: 30rpx;
  background-color: #fff;
  padding: 0 25rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.item-inp > view {
  display: inline-block;
  line-height: 88rpx;
}

.item-inp-tit {
  width: 200rpx;
}

.item-inp-box {
  width: 478rpx;
  margin-right: 7rpx;
}

.item-inp-box input {
  height: 28rpx;
  text-align: right;
  font-size: 30rpx;
  line-height: 30rpx;
  padding: 20rpx 0;
}

.item-inp-box .picker {
  width: 100%;
  height: 28rpx;
  text-align: right;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 30rpx 0;
}

.go-ico image {
  width: 15rpx;
  height: 30rpx;
}

.go-ico {
  padding: 30rpx 0;
  padding-left: 22rpx;
}

.item-inp-picker {
  width: 458rpx;
}

.btn-box {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 26rpx;
}

.btn-box button {
  width: 700rpx;
  color: #fff;
  font-weight: normal;
  background: #3994e5;
}
