/* pages/addJobs/addJobs.wxss */

.container > view {
  margin-top: 20rpx;
}

.item-inp {
  font-size: 30rpx;
  background-color: #fff;
  padding: 0 25rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.item-inp > view {
  display: inline-block;
  line-height: 88rpx;
}

.item-inp-tit {
  width: 200rpx;
}

.item-inp-box {
  width: 500rpx;
}

.item-inp-box input {
  height: 28rpx;
  text-align: right;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 22rpx 0;
}

.item-inp-box .picker {
  width: 100%;
  height: 28rpx;
  text-align: right;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 30rpx 0;
}

.go-ico image {
  width: 15rpx;
  height: 30rpx;
}

.go-ico {
  padding: 30rpx 0;
  padding-left: 8rpx;
}

.item-inp-picker {
  width: 478rpx;
}

.tt-box {
  padding: 25rpx;
  background-color: #fff;
}

.tit {
  font-size: 30rpx;
  margin-bottom: 25rpx;
}

.tit text {
  color: #999;
  font-size: 24rpx;
}

.tt-box {
  margin-bottom: 140rpx;
}

textarea {
  width: 650rpx;
  height: 350rpx;
  font-size: 28rpx;
  background: #f5f5f5;
  padding: 25rpx;
}

.switch-box {
  background-color: #fff;
  margin-top: 21rpx;
  margin-bottom: 140rpx;
}

.s-box {
  padding: 30rpx 20rpx 0;
}

.switch-btn {
  zoom: 0.7;
  vertical-align: bottom;
}

.tip {
  color: #999;
  font-size: 24rpx;
  line-height: 38rpx;
  padding: 20rpx;
}

.btn-box {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 26rpx;
}

.btn-box button {
  /* display: inline-block; */
  font-weight: normal;
  line-height: 88rpx;
  padding: 0;
}

.btn-box .save-btn {
  width: 700rpx;
  color: #fff;
  font-weight: normal;
  background: #3994e5;
}

.btn-box .del-btn {
  width: 140rpx;
  background: #eee;
  margin-right: 10rpx;
  margin-left: 20rpx;
}
