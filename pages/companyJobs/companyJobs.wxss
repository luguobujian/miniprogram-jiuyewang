.cont {
  margin-bottom: 140rpx;
}

.touch-item {
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  border-bottom: 1px solid #f5f5f5;
  width: 100%;
  overflow: hidden;
}

.content {
  width: 100%;
  padding: 30rpx 20rpx 10rpx;
  /* line-height: 22px; */
  margin-right: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
  position: relative;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 21rpx;
}

.pric {
  position: absolute;
  top: 54rpx;
  right: 22rpx;
}

.del {
  background-color: orangered;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touch-move-active .content, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.btn-box {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 26rpx;
}

.btn-box button {
  /* display: inline-block; */
  font-weight: normal;
  line-height: 88rpx;
  padding: 0;
}

.btn-box .save-btn {
  width: 700rpx;
  color: #fff;
  font-weight: normal;
  background: #3994e5;
}

.btn-box .del-btn {
  width: 140rpx;
  background: #eee;
  margin-right: 10rpx;
  margin-left: 20rpx;
}
