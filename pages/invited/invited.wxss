/* pages/invited/invited.wxss */

.section {
  /* padding: 31rpx 20rpx; */
  background-color: #fff;
  border-top: 1px solid #f5f5f5;
}

.item-inp {
  font-size: 30rpx;
  background-color: #fff;
  padding: 0 25rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.item-inp > view {
  display: inline-block;
  line-height: 88rpx;
}

.item-inp-tit {
  width: 200rpx;
}

.item-inp-box {
  width: 500rpx;
}

.item-inp-box input {
  height: 28rpx;
  text-align: right;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 22rpx 0;
}

.item-inp-box .picker {
  width: 100%;
  height: 28rpx;
  text-align: right;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 30rpx 0;
}

.item-inp-box .picker view {
  display: inline-block;
  color: #fe4848;
}

.go-ico image {
  width: 15rpx;
  height: 30rpx;
}

.go-ico {
  padding: 30rpx 0;
  padding-left: 8rpx;
}

.item-inp-picker {
  width: 478rpx;
}

.pric image {
  width: 15rpx;
  height: 30rpx;
  vertical-align: sub;
}

.t-box {
  background-color: #fff;
  padding: 20rpx;
  margin-top: 20rpx;
}

.t-tit {
  padding-bottom: 26rpx;
}

.t-con {
}

.t-con textarea {
  width: 650rpx;
  height: 540rpx;
  background: rgba(245, 245, 245, 1);
  padding: 30rpx;
}

.t-btn {
  margin: 23rpx 25rpx;
}

.t-btn button {
  width: 700rpx;
  height: 88rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 88rpx;
  background: #3994e5;
  padding: 0;
}
