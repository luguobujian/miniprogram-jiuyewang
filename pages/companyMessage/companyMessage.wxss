/* pages/companyMessage/companyMessage.wxss */

.item-box {
  margin-bottom: 120rpx;
}

.avater-box {
  margin-left: 20rpx;
  margin-right: 14rpx;
}

.avater-box, .avater-box image {
  width: 54rpx;
  height: 54rpx;
  border-radius: 50%;
  background-color: skyblue;
}

.right-box {
  width: 640rpx;
}

.f-tit {
  color: #999;
  font-size: 28rpx;
  margin-top: 10rpx;
}

.s-con {
  font-size: 28rpx;
  padding: 10rpx 0 18rpx;
}

.t-job {
  height: 100rpx;
  background-color: #f5f5f5;
  margin-bottom: 19rpx;
}

.job-box >view {
  padding: 0 24rpx;
}

.job-box >view.job-tit-box {
  padding-top: 10rpx;
}

.job-tit {
  font-size: 28rpx;
}

.pric {
  font-size: 28rpx;
}

.simple-tit {
  color: #999;
  font-size: 24rpx;
  margin-top: 6rpx;
}

.item-list {
  padding-top: 17rpx;
  margin-bottom: 14rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f5f5f5;
}

.b-btn {
  height: 80rpx;
  border-top: 1px solid #f5f5f5;
}

.b-btn .btn {
  width: 100rpx;
  height: 54rpx;
  line-height: 54rpx;
  color: #999;
  font-size: 28rpx;
  text-align: center;
  padding: 0;
  margin-top: 10rpx;
  margin-right: 20rpx;
  border: 1rpx solid rgba(204, 204, 204, 1);
  border-radius: 27rpx;
}

.b-btn .btn.active {
  color: #3994e5;
  border: 1rpx solid #3994e5;
}
