/* pages/addSimple/addSimple.wxss */

page, .container {
  height: 100%;
  background-color: #fff;
}

.item-inp {
  font-size: 30rpx;
  background-color: #fff;
  padding: 0 25rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.item-inp > view {
  display: inline-block;
  line-height: 88rpx;
}

.item-inp-tit {
  width: 200rpx;
}

.item-inp-box {
  width: 500rpx;
}

.item-inp-box input {
  height: 28rpx;
  text-align: right;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 22rpx 0;
}

.con {
  padding: 0 25rpx;
  background-color: #fff;
  border-top: 1px solid #f5f5f5;
}

.con-tit {
  font-size: 28rpx;
  padding: 23rpx 0 25rpx;
}

.con-con textarea {
  width: 630rpx;
  height: 420rpx;
  padding: 40rpx 35rpx;
  background-color: #f5f5f5;
}

.btn {
  margin: 29rpx 0;
}

.btn button {
  width: 700rpx;
  height: 88rpx;
  line-height: 88rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: normal;
  padding: 0;
  background-color: #3994e5;
}
