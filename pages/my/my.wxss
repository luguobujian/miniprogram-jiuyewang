/* pages/my/my.wxss */

.user-box {
  padding: 35rpx 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
}

.avatar-box, .avatar-box image {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background: skyblue;
}

.avatar-box {
  margin-right: 29rpx;
}

.user-right {
  margin-top: 16rpx;
}

.user-right-t {
  line-height: 32rpx;
}

.user-right-b {
  color: rgba(51, 51, 51, 0.8);
  font-size: 24rpx;
  line-height: 24rpx;
  margin-top: 18rpx;
}

.user-right-b image {
  width: 31rpx;
  height: 29rpx;
  margin-right: 9rpx;
  vertical-align: sub;
}
