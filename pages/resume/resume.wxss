/* pages/resume/resume.wxss */

page, .container {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}

.top-sort {
  display: flex;
  width: 100%;
  background-color: #fff;
  position: fixed;
  top: 1rpx;
}

.top-sort-classes {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  line-height: 80rpx;
  border-top: 1rpx solid #f5f5f5;
}

.top-sort-classes.active {
  color: #3994e5;
}

.sico {
  width: 22rpx;
  height: 22rpx;
  vertical-align: middle;
}

.list-box {
  padding-top: 80rpx;
  background-color: #f5f5f5;
}

.item-list {
  margin-top: 20rpx;
  background-color: #fff;
}

.avatar, .avatar-box {
  width: 80rpx;
  height: 80rpx;
  background-color: skyblue;
  border-radius: 50%;
}

.avatar-box {
  margin: 23rpx 16rpx 0 20rpx;
}

.info {
  width: 613rpx;
  padding-right: 20rpx;
}

.info-top {
  border-bottom: 1rpx solid #f5f5f5;
}

.info-top-top {
  line-height: 32rpx;
  padding-top: 27rpx;
  padding-bottom: 18rpx;
}

.welfare-box {
  margin-bottom: 19rpx;
}

.welfare-tag {
  display: inline-block;
  color: #3994e5;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  margin-right: 11rpx;
  background: rgba(57, 148, 229, 0.1);
  border-radius: 4rpx;
}

.info-bottom {
}

.info-bottom-t {
  font-size: 24rpx;
  line-height: 24rpx;
  padding-top: 20rpx;
  padding-bottom: 17rpx;
}

.info-bottom-b {
  color: #999;
  font-size: 24rpx;
  line-height: 24rpx;
  padding-bottom: 27rpx;
}
