/* pages/companyShow/companyShow.wxss */

page, .container {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.top-job, .top-company {
  padding: 27rpx 20rpx;
  border-top: 1rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
  background-color: #fff;
}

.company-box {
  position: relative;
}

.logo, .logo image {
  width: 84rpx;
  height: 84rpx;
  background: skyblue;
  border-radius: 4rpx;
}

.logo {
  position: absolute;
  top: 4rpx;
  right: 24rpx;
}

.simple-title {
  color: #999;
  font-size: 24rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.welfare-tag {
  color: #3994e5;
  font-size: 24rpx;
  width: 126rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  margin-right: 11rpx;
  background: rgba(57, 148, 229, 0.1);
  border-radius: 4rpx;
}

.job-content {
  /* padding: 0 20rpx; */
  margin: 20rpx 0;
  background-color: #fff;
}

.job-content-title {
  display: flex;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.job-content-title view {
  flex: 1;
  font-size: 28rpx;
  line-height: 28rpx;
  text-align: center;
  position: relative;
}

.job-content-title view.active {
  color: rgba(36, 162, 255, 1);
}

.job-content-title view.active::before {
  content: '';
  width: 40rpx;
  height: 6rpx;
  background: rgba(36, 162, 255, 1);
  border-radius: 4rpx;
  position: absolute;
  left: 158rpx;
  bottom: -30rpx;
}

.job-con {
  font-size: 28rpx;
  padding: 27rpx 20rpx 40rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.addr-box {
  font-size: 28rpx;
  padding: 22rpx 20rpx;
}

.addr-box image {
  width: 30rpx;
  height: 38rpx;
  vertical-align: sub;
  margin-right: 16rpx;
}

.list-box {
  /* padding-top: 80rpx; */
  background-color: #f5f5f5;
}

.item-list {
  margin-top: 19rpx;
}

.lr-box {
  padding: 27rpx 20rpx 29rpx;
  background-color: #fff;
}

.item-list-left {
  width: 448rpx;
}

.item-list-right {
  width: 262rpx;
}

.title {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.simple-title {
  color: #999;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.simple-title:last-child {
  margin-bottom: 0rpx;
}

.date {
  color: #999;
  font-size: 26rpx;
  text-align: right;
  margin-top: 68rpx;
}
