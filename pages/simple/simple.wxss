/* pages/simple/simple.wxss */

.weui-cells {
  display: flex;
  background-color: #fff;
}

.weui-cell {
  flex: 1;
  /* width: 620rpx; */
}

.weui-r {
  margin-top: 18rpx;
  margin-right: 30rpx;
}

.weui-r image {
  width: 60rpx;
  height: 60rpx;
}

.list-box {
  margin: 11rpx;
}

.item-list {
  display: inline-block;
  width: 304rpx;
  height: 490rpx;
  background: rgba(255, 255, 255, 1);
  padding: 23rpx 20rpx 19rpx;
  border-radius: 4rpx;
  margin: 10rpx;
}

.item-title {
  font-size: 32rpx;
  line-height: 32rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-con {
  border: 1rpx solid #fff;
  background: rgba(245, 245, 245, 1);
}

.item-con view {
  width: 255rpx;
  height: 284rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 36rpx;
  margin: 23rpx 24rpx 22rpx 21rpx;
  /* margin: 0 auto; */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 8;
}

