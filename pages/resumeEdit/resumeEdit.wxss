/* pages/resumeEdit/resumeEdit.wxss */

page, .container {
  height: 100%;
  background-color: #f5f5f5;
}

.top {
  padding: 0 20rpx;
  background-color: #fff;
  border-top: 1px solid #f5f5f5;
}

.top-t {
  border-bottom: 1px solid #f5f5f5;
}

.top-left {
  width: 610rpx;
  margin-top: 29rpx;
}

.simple-title {
  margin-top: 22rpx;
}

.avatar-box {
  margin-top: 32rpx;
}

.avatar-box, .avatar-box .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: skyblue;
}

.contact {
  font-size: 24rpx;
  padding-bottom: 34rpx;
}

.contact image {
  width: 34rpx;
  height: 34rpx;
  vertical-align: sub;
}

.tel-box {
  margin-right: 49rpx;
}

.top-bottom {
  font-size: 28rpx;
  padding: 20rpx 0;
}

.top-bottom view {
  line-height: 54rpx;
}

.c-con {
  background-color: #fff;
  padding: 20rpx;
  margin: 20rpx 0;
}

.bb {
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f5f5f5;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
}

.second-title {
  font-size: 30rpx;
  line-height: 30rpx;
  padding-top: 24rpx;
}

.second-date {
  color: #999;
  padding-top: 24rpx;
}

.c-con-c {
  font-size: 28rpx;
  padding-top: 20rpx;
}

.c {
  color: #666;
}

.cert-box {
  padding: 30rpx 0;
}

.cert {
  display: inline-block;
  font-size: 28rpx;
  background-color: #f5f5f5;
  padding: 9rpx 36rpx 9rpx 36rpx;
  margin-right: 15rpx;
  margin-bottom: 12rpx;
}

.cert image {
  width: 18rpx;
  height: 18rpx;
  margin-left: 10rpx;
}

.edit-btn {
  color: #24a2ff;
  font-size: 28rpx;
}

.top-left .edit-btn {
  display: inline-block;
}
